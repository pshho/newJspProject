package exercise;

public class StarMain {

	public static void main(String[] args) {
		for(int i=0; i<4; i++) {
//			for(int j=1; j<20; j += 1) {
//				// System.out.print(" ");
//				System.out.print(j);
//			}
			
			1 3
			2 4  1
			3 5  2
			4 6  3
			for(int j=1; j<(i+2)+(i-1); j += 1) {
				System.out.print("*");
				if(i==0) {
					break;
				}
				// System.out.print("ë‘");
			}
			
			System.out.println();
		}
	}

}
