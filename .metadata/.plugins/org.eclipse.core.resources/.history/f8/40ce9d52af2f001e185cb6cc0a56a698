package JspProject;

public class People extends Subject{ // 과목(총점, 평균, 등수, 등급) 배열 상속받은 사람 클래스
	private String name; // 사람

	// 사람과 과목은 1대 다의 관계
	public People(String name, String... subjects) {
		super(subjects);
		this.name = name;
	}
	
	// 퀵정렬
	void quickDistinct(int left, int right, People[] people) {
		if(left > right) {
			return;
		}
		
		int pivot = left;
		int lefts = pivot+1;
		int rights = right;
		
		while(lefts <= rights) {
			while(lefts<=rights && people[pivot].getRank() <= people[lefts].getRank()) {
				lefts++;
			}
			
			while(lefts<=rights && people[pivot].getRank() >= people[rights].getRank()) {
				rights--;
			}
			
			if(lefts < rights) {
				People temp = people[lefts];
				people[lefts] = people[rights];
				people[rights] = temp;
			}
		}
		
		People temp = people[pivot];
		people[pivot] = people[rights];
		people[rights] = temp;
		
		namesDistinct(left, rights-1, people);
		namesDistinct(rights+1, right, people);
	}
	
	public String getName() {
		return name;
	}
	
	@Override
	public String toString() {
		return "People [name=" + name + ", toString()=" + super.toString() + "]";
	}
	
}
