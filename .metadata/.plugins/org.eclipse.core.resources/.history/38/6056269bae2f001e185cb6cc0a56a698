package JspProject;

public class People extends Subject{ // 과목(총점, 평균, 등수, 등급) 배열 상속받은 사람 클래스
	private String name; // 사람

	// 사람과 과목은 1대 다의 관계
	public People(String name, String... subjects) {
		super(subjects);
		this.name = name;
	}
	
	// 퀵정렬
	void namesDistinct(int i, int left, int right, Category[][] category) {
		if(left > right) {
			return;
		}
		
		int pivot = left;
		int lefts = pivot+1;
		int rights = right;
		
		while(lefts <= rights) {
			while(lefts<rights && category[i][pivot].getRank() <= category[i][lefts].getRank()) {
				lefts++;
			}
			
			while(lefts<rights && category[i][pivot].getRank() >= category[i][rights].getRank()) {
				rights--;
			}
			
			if(lefts < rights) {
				Category temp = category[i][lefts];
				category[i][lefts] = category[i][rights];
				category[i][rights] = temp;
			}
		}
		
		Category temp = category[i][pivot];
		category[i][pivot] = category[i][rights];
		category[i][rights] = temp;
		
		namesDistinct(i, left, rights-1, category);
		namesDistinct(i, rights+1, right, category);
	}
	
	public String getName() {
		return name;
	}
	
	@Override
	public String toString() {
		return "People [name=" + name + ", toString()=" + super.toString() + "]";
	}
	
}
